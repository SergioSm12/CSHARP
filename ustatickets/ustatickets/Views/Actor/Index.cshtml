@model IEnumerable<Actor>
@{
    ViewData["Title"] = "Actors List";
}

<div class="row">
    <table class=" col-md-8  table table-striped table-bordered">
        <thead>
        <th>@Html.DisplayNameFor(m=> m.ProfilePictureURL)</th>
        <th>@Html.DisplayNameFor(m=> m.FullName)</th>
        <th>@Html.DisplayNameFor(m=> m.Bio)</th>
        <th>Actions</th>
        </thead>
        <tbody>
            @foreach (var actor in Model)
            {
                <tr>

                    <td class="align-middle"><img class="rounded-circle foto" src="@actor.ProfilePictureURL" alt="@actor.FullName"></td>
                    <td class="align-middle">@actor.FullName</td>
                    <td class="align-middle">@actor.Bio</td>
                    <td>
                        <a class="btn btn-outline-primary" style="margin-bottom: 5px" asp-action="Edit" asp-route-id="@actor.Id"><i class="bi bi-pen"></i></a>
                        <br />
                        <a class="btn btn-outline-info" style="margin-bottom: 5px" asp-action="Details" asp-route-id="@actor.Id"><i class="bi bi-info-circle"></i></a>
                        <br />
                        <a class="btn btn-outline-danger" style="margin-bottom: 5px" asp-action="Delete" asp-route-id="@actor.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-white mb-4" style="position:fixed; right: 25px; bottom : 35px;">
    <a asp-controller="Actor" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>

</div>